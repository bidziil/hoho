{
  "extends": "tslint:recommended",
  "rulesDirectory": [
    "codelyzer"
  ],
  "defaultSeverity": "warning",
  "rules": {
    "array-type": false,
    "arrow-parens": false,
    "deprecation": {
      "severity": "warn"
    },
    "align": false,
    "import-spacing": false,
    "no-console": [true, "error"/*, { allow: ["warn", "error"] }*/],
    "no-inferrable-types": false,
    "ban-types": false,
    "no-redundant-jsdoc-annotations": false,
    "prefer-const": false,
    "quotemark": [
      true,
      "single"
    ],
    "max-line-length": [
      true,
      200
    ],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "trailing-comma": false,
    "directive-selector": [
      true,
      "attribute",
      "app",
      "rs",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "rs",
      "kebab-case"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "object-literal-key-quotes": false,
    "indent": false,
    "curly": false,
    "object-literal-sort-keys": false,
    "object-literal-shorthand": false,
    "ordered-imports": false,
    "prefer-for-of": false,
    "no-consecutive-blank-lines": false,
    "no-redundant-jsdoc": false,
    "no-empty": false,
    "no-empty-interface": false,
    "interface-name": false,
    "no-angle-bracket-type-assertion": false,
    "no-string-literal": false,
    "arrow-return-shorthand": false,
    "no-output-on-prefix": false,
    "jsdoc-format": false
  }
}
